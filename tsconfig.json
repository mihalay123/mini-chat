{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@features/*": ["features/*"],
      "@generated/*": ["generated/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["src"]
}
